@model IEnumerable<_70325_Dolbik_Vorobei.DAL.Dish>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Наименование")
        </th>
        <th>
            @Html.DisplayName("Описание блюда")
        </th>
        <th>
            @Html.DisplayName("Стоимость")
        </th>
        <th>
            @Html.DisplayName("Группа")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@Html.DisplayFor(modelItem => item.DishName)
               .ToString(),
               "Edit",
               new
               {
                   id = item.DishId
               })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.ActionLink("Удалить",
               "Delete",
               new
               {
                   id =item.DishId
               })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Назад", "Index")
</div>

